  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.11",
    "@types/morgan": "^1.9.2",
    "@types/serve-favicon": "^2.5.2",
    "@types/shelljs": "^0.8.8",
    "concurrently": "^5.3.0",
