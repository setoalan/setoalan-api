{
  "name": "setoalan-api",
  "version": "0.1.0",
  "description": "Alan Seto's Personal API",
  "bugs": {
    "url": "https://github.com/setoalan/setoalan-api/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/setoalan/setoalan-api.git"
  },
  "license": "MIT",
  "author": "Alan Seto <alantseto@gmail.com>",
  "scripts": {
    "build": "npm run copy:assets && npm run build:tsc",
    "build:tsc": "tsc",
    "copy:assets": "ts-node utils/copyStaticAssets.ts",
    "dev": "npm run build && concurrently 'npm run watch:tsc' 'npm run watch:node'",
    "format": "prettier --write '**/*.+(ts|tsx)'",
    "lint": "eslint '**/*.+(ts|tsx)'",
    "lint-staged": "lint-staged",
    "start": "node ./build/server",
    "test": "echo 'Error: no test specified' && exit 1",
    "watch:node": "nodemon build/server.js --ignore public",
    "watch:tsc": "tsc -w"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --env browser,node --fix"
    ]
  },
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "express": "~4.17.1",
    "mongoose": "^5.11.15",
    "morgan": "^1.10.0",
    "pug": "^3.0.1",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.11",
    "@types/morgan": "^1.9.2",
    "@types/serve-favicon": "^2.5.2",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/parser": "^4.15.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.20.0",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "shelljs": "^0.8.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  }
}
